<div class="big_wrapper">
	<div class="sidebar-wrapper">

				<div class="subhead" id="artist-name">
					<%= @artist.amg_artist_name %>
				</div>
			
				<%= render partial: 'image' %>
				<br>
				<%= render partial: 'sidebar' %>
				<br>
				<%= render partial: 'audio' %>

	</div>


	<div id="tree-content">

		<div class="sky">

			<h1 class="headline">Bandly Tree</h1>
			<h2 class="subhead">Know Your Roots</h2>
			
			<img class="tree" src="assets/music-tree2.png">

			<div class="search-bar">
				<%= form_for @query, remote: true do |f| %>
					<%= f.label "search" %>
					<%= f.text_field :artist_name, :id => "textBar" %>
					<%= f.submit %>
				<% end %>
			</div>
		
		</div>


		<div class="ground">
			
	<!-- display "No Results" if page object parse array comes up empty/nil -->
			<div class="influencers" id="influencers-1">
				<% if @artist.related[0] == nil %>
					No Results
				<% else %>
	<!-- display up to four influencers -->
					<% @artist.related.each do |i| %>
						<%= i.text %>
						<br>
						<%= form_for @query do |f| %>
							<%= f.hidden_field :artist_name, :value => i.text %>
							<%= f.submit "See More" %>
						<% end %>
						<button type="button" class="btn btn-success see-more">VVV</button>
					<% end %>
				<% end %>
			</div>

		</div>

</div>




<script>
	$(".see-more").click(function(){
		$(".ground").append("<div class='ground'><div class='row'><% if @artist.related[0] == nil %><div class='col-md-12 test'>No Results</div><% else %><% @artist.related.each do |i| %><div class='col-md-3 test'><%= i.text %><br><button type='button' class='btn btn-success see-more'>VVV</button></div><% end %><% end %></div></div>");
		window.scrollTo(0,document.body.scrollHeight);
	});
</script>
