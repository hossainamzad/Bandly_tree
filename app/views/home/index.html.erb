<!-- /// SIDEBAR -->
<!-- <div class="big_wrapper"> -->
<div class="sidebar-wrapper">

	<div class="subhead" id="artist-name">
		<%= @artist.artist_name_and_image[0] %>
	</div>

	<%= render partial: 'image' %>
	<br>
	<%= render partial: 'sidebar' %>

</div>

<!-- /// MAIN PANEL -->
<div id="tree-content">

<!-- /// SKY -->
	<div class="sky">
		<h1 class="headline">Bandly Tree</h1>
		<h3 class="subhead" id="tagline">know your roots</h3>
		
		<!-- /// remote link for tree image -->
		<!-- <img class="tree" src="http://2.bp.blogspot.com/_VC5iSShRPRs/S8XvYuq4-SI/AAAAAAAABJc/vm418GSuQIA/s1600/Ficusmcp04L.png"> -->
		<img class="tree" src="<%= image_path("tree.png") %>">

		<div id="name">
			<%= @artist.artist_name_and_image[0] %>
		</div>

		<div class="search-bar">
			<div class="search-field">
				<%= form_for @query, remote: true do |f| %>
					<%= f.label "Artist" %>
					<%= f.text_field :artist_name, :id => "textBar" %>
					<%= f.submit "Search" %>
				<% end %>
			</div>
				<span id="start-here">&#8592; Type your favorite band here!</span>
		</div>
	</div>
<!-- </div> -->

<!-- /// GROUND -->
	<div class="ground">
		
		<div class="roots1">
			<div id="mainline"></div>
		</div>
		<div class="roots2">
			<div class="half-row1"></div>
			<div class="half-row2"></div>
		</div>
		<div class="roots3">
			<div class="vertical1"></div>
			<div class="roots4">
				<div class="vertical2"></div>
				<div class="vertical3"></div>
			</div>
			<div class="vertical4"></div>
		</div>

		<div id="influencers-wrapper">
			<% if @artist.related[0] == nil %>
		<!-- display "No Results" if page object parse array comes up empty/nil -->
				<div class="influencers">
					<div id="inf-border">
						No Results
					</div>
				</div>
			<% else %>
		<!-- display up to four influencers -->

				<% @artist.related.each do |i| %>
				
					<div class="influencers" onclick="javascript:this.childNodes[0].submit();">
						<form class="new_subquery" id="new_subquery" action="/subqueries" accept-charset="UTF-8" data-remote="true" method="post">
						<input name="utf8" type="hidden" value="âœ“">
						<input id="influencerBar" type="hidden" name="subquery[artist]" value="<%= i.text.strip%>">
						<!-- <button name="influencer1" class="influencer-button"> -->
							<div id="inf-border">
								<span class="influencer"><%= i.text.strip %></span>
								<br>
								<!-- image tag goes here, see allmusic-temp.rb in lib -->
								<br>
								<!-- <button class="listen-button">Listen</button> -->
								<!-- form for query with "Listen" button goes here, see allmusic-temp.rb in lib -->
								<div class="stretch growth-button" id="<%= i.text.gsub(" ", "-").downcase %>">&#9660;</div>
							</div>
						</form>
					</div>
				
					<!-- script goes here, see allmusic-temp.rb in lib -->

				<% end %><!-- root_row do statement -->
			<% end %><!-- if statement -->
		</div><!-- influencers-wrapper -->
		<div class="coming-soon">Coming Soon</div>

	</div><!-- ground -->

</div><!-- tree-content