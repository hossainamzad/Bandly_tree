<div class="sky">
	<div class="row">
		<div class="col-md-4">
			<h1 class="headline">Bandly Tree</h1>
			<h2 class="subhead">Know Your Roots</h2>
		</div>
		</div class="col-md-4">
		</div>
		<div class="col-md-4">
			<!-- Recent Artists -->
		</div>
	</div>
	<div class="row">
		<div class="col-md-4">
		</div>
		</div class="col-md-4">
			<!-- <img class="tree" src="assets/music-tree1.jpg"> -->
			<img class="tree" src="assets/music-tree2.png">
		</div>
		<div class="col-md-4">
		</div>
	</div>
</div>

<div class="ground">
	<div class="row">
		<div class="col-md-5">
		</div>
<!-- search box -->
		<div class="col-md-2 search-bar">
			<%= form_for @query do |f| %>
				<%= f.label "search" %>
				<%= f.text_field :artist_name %>
				<%= f.submit %>
			<% end %>
			<br>
<!-- this is parsing the Nokogiri page object for the artist name, then removing extra spaces at the beginning and end -->
			Results for: <%= @artist_amg_page_object.css("h1[class='artist-name']").text.strip! %>
			<br>
<!-- this displays the artist's bio -->
			<%= @artist_bio_page_object.css("div[class='text']").text.strip! %>
		</div>
		<div class="col-md-5">
		</div>
	</div>

	<div class="row">
<!-- display "No Results" if page object parse array comes up empty/nil -->
		<% if @influencers_array_4[0] == nil %>
			<div class="col-md-12 test">
				No Results
			</div>
		<% else %>
<!-- display up to four influencers -->
			<% @influencers_array_4.each do |i| %>
				<div class="col-md-3 test">
					<%= i.text %>
				</div>
			<% end %>
		<% end %>
	</div>
</div>

